# Application Environment Configuration
# Copy this file to .env and customize the values

# PostgreSQL Database
ConnectionStrings__PostgresConnection=Host=localhost;Port=5432;Database=laberis;Username=laberis_user;Password=change-this-secure-database-password

# MinIO Configuration for Backend (must match .env.db credentials)
MinIO__AccessKey=laberis_minio
MinIO__SecretKey=change-this-secure-minio-password
MinIO__UseSSL=false

# JWT Authentication
JWT_SECRET=change-this-to-a-secure-256-bit-key-for-production
JWT_EXPIRATION=60
JWT_REFRESH_EXPIRATION=7

# Default Admin User
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-admin-password

# SMTP Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=Laberis
SMTP_FROM_ADDRESS=no-reply@yourdomain.com